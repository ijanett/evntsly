  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>evntsly</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://fonts.googleapis.com/css?family=Philosopher|Great+Vibes|Oxygen&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="/stylesheets/main.css" />
    
  </head>
  <body>
    <div id="page">
      <header>
        <nav>
          <ul>
            <li><a href="/">home</a></li>
            <%if logged_in?%>
              <li><a href="/account">my account</a></li>
              <li><a href="/<%=current_user.username%>">my events</a></li> 
              <li><a id="logout" href="/logout">log out</a></li>
            <%end%>
          </ul>
        </nav>
      </header>
      <div class="wrapper">
      <% flash.keys.each do |type| %>
        <div data-alert class="flash <%= type %> alert-box radius">
          <%= flash[type] %>
          <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        </div>
      <% end %>

          <%= yield %>

        <footer class="branding">
          <small>&copy; 2019 <strong style="color:color:rgb(120, 64, 131); font-family:'Great Vibes', cursive; font-size: 18px;">evntsly</strong></small>
        </footer>
      </div>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
